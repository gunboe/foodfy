{% extends "layout.njk" %}
 
{% block content %}

<!-- Cards de Receitas -->
<section class="cards">
    {%for item in items%}
    <div class="card" id="{{item.id}}" receita="{{item.card_content}}" stars={{item.stars}}>
        <div id="stars_{{item.id}}"></div>
        <img src="/{{item.id}}.png" alt="Imagem de {{item.id}}">
        {{item.id}}
    </div>
    {%endfor%}
</section>

{% endblock %}